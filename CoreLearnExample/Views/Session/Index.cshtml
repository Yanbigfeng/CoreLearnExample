
@Model UserViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>session首先展示</h1>
<p>
    <h3>这里显示信息</h3>
    <div> @Model.name </div>
    <div> @Model.age </div>
</p>


<div>
    <h3>这里设置信息</h3>
    <form asp-action="Set" target="iframe_display" onsubmit="setTimeout(function () { window.location.reload(); alert('加载完成') },0)">

        <div>
            <label>姓名：</label>
            <input name="name" />
        </div>
        <div>
            <label>年龄：</label>
            <input name="age" />
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <iframe id="iframe_display" name="iframe_display" style="display: none;"></iframe>
</div>
